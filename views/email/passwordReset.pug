extends baseEmail

block content
  p Hi #{firstName},
  p Forgot your password? go to: http://localhost:3000/password_reset/#{token} to reset your password or click the button below.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`http://localhost:3000/password_reset/${token}`, target='_blank') Reset your password
  p If you didn't forget your password, please disregard this email!
